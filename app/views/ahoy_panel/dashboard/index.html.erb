<div class="mx-auto max-w-7xl px-4 py-12 sm:px-6 lg:px-8">
  <div class="mb-8">
    <h3 class="text-base font-semibold text-gray-900">Last 30 days</h3>
    <dl class="mt-5 grid grid-cols-1 gap-5 sm:grid-cols-3">
      <div class="overflow-hidden rounded-lg bg-white px-4 py-5 shadow sm:p-6">
        <dt class="truncate text-sm font-medium text-gray-500">Total Visits</dt>
        <dd class="mt-1 text-3xl font-semibold tracking-tight text-gray-900"><%= @visits_count %></dd>
      </div>
      <div class="overflow-hidden rounded-lg bg-white px-4 py-5 shadow sm:p-6">
        <dt class="truncate text-sm font-medium text-gray-500">Total Page Views</dt>
        <dd class="mt-1 text-3xl font-semibold tracking-tight text-gray-900"><%= @events_count %></dd>
      </div>
      <div class="overflow-hidden rounded-lg bg-white px-4 py-5 shadow sm:p-6">
        <dt class="truncate text-sm font-medium text-gray-500">Views Per Visit</dt>
        <dd class="mt-1 text-3xl font-semibold tracking-tight text-gray-900"><%= @events_count / @visits_count %></dd>
      </div>
    </dl>
  </div>

  <div class="mb-8">
    <h3 class="text-base font-semibold text-gray-900 mb-5">Total Visits</h3>

    <%= line_chart @visits.group_by_day(:started_at).count %>
  </div>

  <div class="mb-8">
    <h3 class="text-base font-semibold text-gray-900 mb-5">Total Page Views</h3>

    <%= line_chart @events.group_by_day(:time).count %>
  </div>

  <div class="mb-8">
    <div></div>
  </div>
</div>
